@page
@model MedControl.Pages.Appointment.AppointmentsListModel


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Twoje wizyty</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="AddAppointment" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Stwórz nową wizytę
            </a>

        </div>
    </div>
    <br /> <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Lekarz
                </th>
                <th>
                    Data
                </th>
                <th>
                    Specjalizacja
                </th>
                <th>
                    Recepta
                </th>
                <th>
                    Przebieg wizyty
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Appointments)
            {
                <tr>
                    <td>@obj.DoctorName</td>
                    <td>@obj.Data</td>
                    <td>@obj.Specialization</td>
                    <td>@obj.Prescription</td>
                    <td>@obj.Description</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="EditAppointment" asp-area="" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="EditAppointment" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                
            }
           
        </tbody>
    </table>
</div>

